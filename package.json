{
  "name": "apostille-library",
  "version": "1.0.0",
  "description": "Typescript implementation of apostille protocol and standards",
  "keywords": [
    "blockchain",
    "nem",
    "notarization",
    "certificate",
    "poe"
  ],
  "homepage": "https://nem.io/wp-content/themes/nem/files/ApostilleWhitePaper.pdf",
  "repository": {
    "type": "git",
    "url": "https://github.com/NEM-Apostille/Apostille-library"
  },
  "main": "index.ts",
  "scripts": {
    "test": "jest --coverage --verbose"
  },
  "author": "gimyboya <amine@luxtag.io>",
  "license": "Apache-2.0",
  "dependencies": {
    "@types/crypto-js": "^3.1.39",
    "@types/lodash": "^4.14.102",
    "crypto-js": "^3.1.9-1",
    "lodash": "^4.17.5",
    "nem-sdk": "^1.6.4",
    "nem2-sdk": "^0.9.2",
    "rxjs": "^5.5.8",
    "typescript": "^2.8.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageDirectory": "<rootDir>/tests/unit/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ]
  }
}
